<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://com.meteo.entity/Ubicacion"
        focusComponent="ubicacionesTable">
    <data readOnly="true">
        <collection id="ubicacionesDc" class="com.meteo.entity.Ubicacion">
            <fetchPlan extends="_base">
                <property name="comunidad" fetchPlan="_instance_name"/>
                <property name="provincia" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="ubicacionesDl">
                <query>
                    <![CDATA[select e from Ubicacion e order by e.nombre]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="ubicacionesTable" spacing="true">
        <filter id="filter" dataLoader="ubicacionesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ubicacionesTable" width="100%" dataContainer="ubicacionesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="nombre"/>
                <column id="comunidad"/>
                <column id="provincia"/>
            </columns>
            <simplePagination/>
            <buttonsPanel alwaysVisible="true">
                <button action="ubicacionesTable.create"/>
                <button action="ubicacionesTable.edit"/>
                <button action="ubicacionesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
