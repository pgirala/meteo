<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://com.meteo.entity/Comunidad"
        focusComponent="form">
    <data>
        <instance id="comunidadDc" class="com.meteo.entity.Comunidad">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="comunidadDc">
            <column width="350px">
                <textField id="codigoField" property="codigo"/>
                <textField id="nombreField" property="nombre"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
