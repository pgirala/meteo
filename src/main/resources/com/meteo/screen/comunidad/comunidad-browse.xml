<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://com.meteo.entity/Comunidad"
        focusComponent="comunidadesTable">
    <data readOnly="true">
        <collection id="comunidadesDc"
                    class="com.meteo.entity.Comunidad">
            <fetchPlan extends="_base"/>
            <loader id="comunidadesDl">
                <query>
                    <![CDATA[select e from Comunidad e order by e.nombre]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="comunidadesTable" spacing="true">
        <filter id="filter" dataLoader="comunidadesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="comunidadesTable" width="100%" dataContainer="comunidadesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="codigo"/>
                <column id="nombre"/>
            </columns>
            <simplePagination/>
            <buttonsPanel alwaysVisible="true">
                <button action="comunidadesTable.create"/>
                <button action="comunidadesTable.edit"/>
                <button action="comunidadesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
