<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://com.meteo.entity/Muestra"
        focusComponent="muestrasTable">
    <data readOnly="true">
        <collection id="muestrasDc" class="com.meteo.entity.Muestra">
            <fetchPlan extends="_base">
                <property name="estacion" fetchPlan="_base">
                    <property name="organizacion" fetchPlan="_instance_name"/>
                    <property name="ubicacion" fetchPlan="_instance_name"/>
                </property>
            </fetchPlan>
            <loader id="muestrasDl">
                <query>
                    <![CDATA[select e from Muestra e order by e.fecha desc, e.estacion.nombre]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="muestrasTable" spacing="true">
        <filter id="filter" dataLoader="muestrasDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="muestrasTable" width="100%" dataContainer="muestrasDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fecha"/>
                <column id="estacion"/>
                <column id="minima"/>
                <column id="maxima"/>
                <column id="precipitacion"/>
            </columns>
            <simplePagination/>
            <buttonsPanel alwaysVisible="true">
                <button action="muestrasTable.create"/>
                <button action="muestrasTable.edit"/>
                <button action="muestrasTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
