<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://com.meteo.entity/Organizacion"
      focusComponent="form">
    <data>
        <instance id="organizacionDc"
                  class="com.meteo.entity.Organizacion">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="organizacionDc">
            <textField id="nombreField" property="nombre" colspan="2"/>
            <textArea id="descripcionField" property="descripcion" colspan="2" height="9.5em"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
